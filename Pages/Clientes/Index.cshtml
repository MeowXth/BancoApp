@page
@model BancoApp.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>
<form method="get">
    <input type="text" name="CriterioBusqueda" value="@Model.CriterioBusqueda" placeholder="Buscar clientes..." />
    <button type="submit">Buscar</button>
</form>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Saldo</th>
        </tr>
    </thead>
    <tbody>
@foreach (var cliente in Model.Clientes)
{
    <tr>
        <td>@cliente.Nombre</td>
        <td>@cliente.Correo</td>
        <td>@cliente.Saldo</td>
        <td>
            <a asp-page="Edit" asp-route-id="@cliente.Id">Editar</a>
            <form method="post" asp-page-handler="Eliminar" asp-route-id="@cliente.Id" style="display:inline;">
                <button type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este cliente?')">
                    Eliminar
                </button>
            </form>
        </td>
    </tr>
}

    </tbody>
</table>

<a asp-page="Create">Agregar Nuevo Cliente</a>

